#!/bin/sh

# This script checks the laptop lid state and enables/disables the
# internal display accordingly.

LAPTOP_OUTPUT="eDP-1"
LID_STATE_FILE="/proc/acpi/button/lid/LID/state"

# Ensure the state file exists before trying to read it
if [ ! -f "$LID_STATE_FILE" ]; then
    echo "Error: Lid state file not found at $LID_STATE_FILE" >&2
    exit 1
fi

read -r LS < "$LID_STATE_FILE"

case "$LS" in
  *open)
    swaymsg output "$LAPTOP_OUTPUT" enable
    ;;
  *closed)
    swaymsg output "$LAPTOP_OUTPUT" disable
    ;;
  *)
    echo "Could not determine lid state from: $LS" >&2
    exit 1
    ;;
esac
