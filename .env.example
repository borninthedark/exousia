# Exousia API Environment Variables
# Copy this file to .env and update values

# Database
DATABASE_URL=sqlite+aiosqlite:///./exousia.db
# For PostgreSQL: postgresql+asyncpg://user:pass@localhost:5432/exousia

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO=borninthedark/exousia
GITHUB_WORKFLOW_FILE=build.yaml

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Logging
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-change-in-production-generate-with-openssl-rand-hex-32

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
