<!--
  Libvirt Domain XML for RKE2 Bootc VM
  =====================================

  This libvirt domain definition creates a VM for running RKE2 on Fedora bootc.

  Features:
  - UEFI boot with TPM 2.0
  - virtio drivers for performance
  - 9p filesystem shares for host integration
  - Network bridge for host access
  - Resource limits suitable for single-node k8s

  Usage:
    1. Customize CPU, memory, and network settings below
    2. Build bootc disk image:
       sudo podman run --rm -it --privileged \
         -v /var/lib/containers/storage:/var/lib/containers/storage \
         -v $PWD:/output \
         quay.io/centos-bootc/bootc-image-builder:latest \
         --type qcow2 \
         localhost:5000/exousia-rke2:latest

    3. Place disk image at /var/lib/libvirt/images/rke2-node-1.qcow2

    4. Define and start VM:
       virsh define libvirt-domain.xml
       virsh start rke2-node-1

  Important paths on host:
    - Kubeconfig: /var/lib/libvirt/rke2/kubeconfig/
    - Storage:    /var/lib/libvirt/rke2/storage/
    - Disk:       /var/lib/libvirt/images/rke2-node-1.qcow2
-->

<domain type='kvm'>
  <name>rke2-node-1</name>
  <uuid>GENERATE</uuid>
  <metadata>
    <exousia:metadata xmlns:exousia="https://github.com/borninthedark/exousia">
      <exousia:type>rke2-bootc</exousia:type>
      <exousia:version>1.0</exousia:version>
      <exousia:description>RKE2 Kubernetes node on Fedora bootc</exousia:description>
    </exousia:metadata>
  </metadata>

  <!-- Resource allocation -->
  <memory unit='GiB'>8</memory>
  <currentMemory unit='GiB'>8</currentMemory>
  <vcpu placement='static'>4</vcpu>

  <os>
    <type arch='x86_64' machine='q35'>hvm</type>
    <!-- UEFI boot -->
    <loader readonly='yes' type='pflash'>/usr/share/edk2/ovmf/OVMF_CODE.fd</loader>
    <nvram>/var/lib/libvirt/qemu/nvram/rke2-node-1_VARS.fd</nvram>
    <boot dev='hd'/>
  </os>

  <features>
    <acpi/>
    <apic/>
    <vmport state='off'/>
  </features>

  <cpu mode='host-passthrough' check='none' migratable='on'>
    <topology sockets='1' dies='1' cores='4' threads='1'/>
  </cpu>

  <clock offset='utc'>
    <timer name='rtc' tickpolicy='catchup'/>
    <timer name='pit' tickpolicy='delay'/>
    <timer name='hpet' present='no'/>
  </clock>

  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>

  <pm>
    <suspend-to-mem enabled='no'/>
    <suspend-to-disk enabled='no'/>
  </pm>

  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>

    <!-- Primary disk: bootc image -->
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2' cache='writeback' discard='unmap'/>
      <source file='/var/lib/libvirt/images/rke2-node-1.qcow2'/>
      <target dev='vda' bus='virtio'/>
      <address type='pci' domain='0x0000' bus='0x04' slot='0x00' function='0x0'/>
    </disk>

    <!-- Optional: Additional storage for persistent volumes -->
    <!--
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2' cache='writeback' discard='unmap'/>
      <source file='/var/lib/libvirt/images/rke2-node-1-storage.qcow2'/>
      <target dev='vdb' bus='virtio'/>
      <address type='pci' domain='0x0000' bus='0x05' slot='0x00' function='0x0'/>
    </disk>
    -->

    <!-- Network: Bridge to default network (virbr0) -->
    <interface type='network'>
      <source network='default'/>
      <model type='virtio'/>
      <address type='pci' domain='0x0000' bus='0x01' slot='0x00' function='0x0'/>
    </interface>

    <!-- Filesystem: Kubeconfig share (9p) -->
    <filesystem type='mount' accessmode='mapped'>
      <source dir='/var/lib/libvirt/rke2/kubeconfig'/>
      <target dir='kubeconfigshare'/>
      <address type='pci' domain='0x0000' bus='0x02' slot='0x00' function='0x0'/>
    </filesystem>

    <!-- Filesystem: Storage share (9p) - optional -->
    <filesystem type='mount' accessmode='mapped'>
      <source dir='/var/lib/libvirt/rke2/storage'/>
      <target dir='storageshare'/>
      <address type='pci' domain='0x0000' bus='0x03' slot='0x00' function='0x0'/>
    </filesystem>

    <!-- Console for serial access -->
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>

    <!-- Graphics for virt-manager access -->
    <graphics type='spice' autoport='yes'>
      <listen type='address'/>
      <image compression='off'/>
    </graphics>

    <video>
      <model type='qxl' ram='65536' vram='65536' vgamem='16384' heads='1' primary='yes'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x0'/>
    </video>

    <!-- RNG for entropy -->
    <rng model='virtio'>
      <backend model='random'>/dev/urandom</backend>
      <address type='pci' domain='0x0000' bus='0x06' slot='0x00' function='0x0'/>
    </rng>

    <!-- TPM 2.0 for secure boot (optional) -->
    <!--
    <tpm model='tpm-crb'>
      <backend type='emulator' version='2.0'/>
    </tpm>
    -->

    <!-- Memory balloon for dynamic memory -->
    <memballoon model='virtio'>
      <address type='pci' domain='0x0000' bus='0x07' slot='0x00' function='0x0'/>
    </memballoon>
  </devices>

  <!-- QEMU command line overrides if needed -->
  <qemu:commandline xmlns:qemu='http://libvirt.org/schemas/domain/qemu/1.0'>
    <!-- Example: CPU pinning for performance
    <qemu:arg value='-cpu'/>
    <qemu:arg value='host,kvm=on,+kvm_pv_unhalt'/>
    -->
  </qemu:commandline>
</domain>
